<div class="card my-1 rounded-pill">
  <div class="card-body d-flex justify-content-between align-items-center user-pill" data-user-Id={{{this.id}}}>
    <div class='d-flex align-items-center' data-user-id={{{this.id}}}>
      <div class='border rounded-circle profile-link profile-image' style='width: 2.1rem; height: 2.1rem'></div>
      <h6 class='ms-2 my-0 profile-link'>@{{{this.username}}}</h6>
    </div>
    <div class='d-flex flex-nowrap user-stats-container'>
      <span class='me-1 d-flex flex-nowrap'>{{{this.post_count}}}<i class="fa fa-bullhorn"></i></span>
      <span class='me-1 d-flex flex-nowrap'>{{{this.comment_count}}}<i class="fa fa-comments"></i></span>
      <span class='me-1 d-flex flex-nowrap'>{{{this.follower_count}}}<i class='fa fa-user'></i></span>
    </div>
    <button type="button" class="btn 
    {{#if this.following}}
    btn-primary
    {{else}}
    btn-outline-primary
    {{/if}}
    rounded-pill">
    {{#if this.following}}
    following
    {{else}}
    follow
    {{/if}}
    </button>
  </div>
</div>