<div class="container-fluid">
            <div class="col-sm-5 col-md-7 col-lg-5 mx-auto d-flex flex-column align-items-center">
                <section class="border border-2 py-3 px-3 my-3 mt-4 post card"> 
                    <div class='d-flex flex-row'>
                        <img src="/assets/images/profile-icon.png" class="profile-image rounded-circle" style='background: red; width: 5rem; height: 5rem;'/>
                        
                        <div class="card-content d-flex justify-content-between align-items-center w-100">
                            <div>
                                <h5 class='my-0 d-inline-block'>@{{{this.username}}}</h6>
                                <p class='mb-0 fst-italic fw-light'>joined {{{format_date this.createdAt}}}</p>
                            </div>
                            {{#unless this.isCurrentUser}}
                            <button class="btn 
                            {{#if this.isFollowing}}
                            btn-primary
                            {{else}}
                            btn-outline-primary 
                            {{/if}}
                            rounded-pill d-inline-block" data-user-id={{{this.id}}}>
                            {{#if this.isFollowing}}
                            following
                            {{else}}
                            follow
                            {{/if}}
                            </button>
                            {{/unless}}
                            {{!-- <textarea name="bio" form="outline rounded-3">Say something about yourself...</textarea> --}}
                        </div>
                    </div>         

                    <div class='p-3'>
                        <p>{{{this.bio}}}</p>
                    </div>       

                      
                </section>
            </div>

            <div class='container-fluid d-flex flex-column justify-content-center align-items-center'>
                {{#each posts as |post|}}
                    {{> post-view post}}
                {{/each}}
            </div>
</div>

<script src='/assets/js/user-profile.js'></script>